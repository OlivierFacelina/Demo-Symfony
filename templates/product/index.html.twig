{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>Mes produits :</h1>

    <ul>
        {% for product in products %}
        <li>
            <a href="{{ path('product_show', {id: product.id})}}">
                {{ product.name ~ ' - ' ~ product.price }}
            </a>
        </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
